{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "build",
    "declaration": true,
    "declarationDir": "dist",
    "strictNullChecks": true,
//    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "*.ts",
    "build/*",
    "dist/*",
    "__tests__/*"
  ]
}